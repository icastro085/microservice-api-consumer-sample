{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es2021"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,

    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*", "__tests__/**/*"],
  "exclude": ["build/**/*", "__coverage__/**/*"]
}
